<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context="cn.teachcourse.view.recyclerview.netease.TabsActivity">
    <TextView
        android:layout_width="wrap_content"
        android:padding="@dimen/activity_horizontal_margin"
        android:text="@string/to_gridview_tab"
        android:layout_height="wrap_content" />
    <include
        layout="@layout/layout_line_vertical"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/to_recyclerview"
        android:layout_weight="4"
        android:padding="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="match_parent"
        android:padding="@dimen/activity_horizontal_margin"
        android:background="@android:color/darker_gray"
        android:text="@string/from_gridview_addtabs"
        android:layout_height="wrap_content" />

    <cn.teachcourse.view.recyclerview.RecyclerCarryOnItemClick
        android:id="@+id/from_recyclerview"
        android:layout_weight="4"
        android:padding="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
